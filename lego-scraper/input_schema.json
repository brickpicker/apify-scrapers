{
  "title": "LEGO Scraper Input",
  "type": "object",
  "schemaVersion": 1,
  "properties": {
    "startUrl": {
      "title": "Start URL",
      "type": "string",
      "description": "The LEGO catalog URL to start scraping from",
      "default": "https://www.lego.com/en-us/categories/all-sets",
      "editor": "textfield"
    },
    "maxProducts": {
      "title": "Max Products",
      "type": "integer",
      "description": "Maximum number of products to scrape. Set to 0 for unlimited.",
      "default": 0,
      "minimum": 0,
      "editor": "number"
    },
    "proxyConfiguration": {
      "title": "Proxy Configuration",
      "type": "object",
      "description": "Proxy settings for the scraper",
      "default": {
        "useApifyProxy": true,
        "apifyProxyGroups": ["RESIDENTIAL"]
      },
      "editor": "proxy"
    }
  },
  "required": ["startUrl"]
}
